package fileManager;

import java.io.FileWriter;
import java.io.IOException;

import peer.Peer;
import protocols.Constants;

public class CsvHandler {

	public void addChunk(Chunk chunk) {
		
		FileWriter fileWriter = null;
		
		
		try {
			fileWriter = new FileWriter("../Chunks"+Peer.getPeerId()+"/ChunkList.csv");
			
			fileWriter.append(chunk.getFileId());
			fileWriter.append(",");
			fileWriter.append(Integer.toString(chunk.getChunkNumber()));
			fileWriter.append(",");
			fileWriter.append(Integer.toString(chunk.getReplication()));
			fileWriter.append(",");
			fileWriter.append(Integer.toString(chunk.getReplication()));
			fileWriter.append(Integer.toString(Peer.getNumberOfPeers(chunk)));
			fileWriter.append("/n");

		} 
		
		catch (IOException e) {
			e.printStackTrace();
		}
		
		finally {
			
			try {
				fileWriter.flush();
				fileWriter.close();
			}
			
			catch (IOException e){
				e.printStackTrace();
			}
		}	
	}
}
